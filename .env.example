# RF Forensics Environment Configuration
# Copy this file to .env and customize for your deployment

# =============================================================================
# Backend Configuration
# =============================================================================
BACKEND_HOST=0.0.0.0
BACKEND_REST_PORT=8000
BACKEND_WS_PORT=8765

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://frontend:80

# Logging
LOG_LEVEL=INFO
DEBUG=0

# Storage paths (inside container)
RECORDINGS_DIR=/data/recordings
LOGS_DIR=/var/log/rf_forensics

# =============================================================================
# SDR Hardware Configuration
# =============================================================================
SDR_DEVICE_TYPE=usdr
SDR_CENTER_FREQ=915000000
SDR_SAMPLE_RATE=10000000
SDR_BANDWIDTH=10000000
SDR_GAIN=40
SDR_SIMULATE=0

# =============================================================================
# GPU Configuration
# =============================================================================
CUDA_VISIBLE_DEVICES=0
NVIDIA_VISIBLE_DEVICES=all
NVIDIA_DRIVER_CAPABILITIES=compute,utility

# =============================================================================
# Holoscan Configuration
# =============================================================================
HOLOSCAN_ENDPOINT=holoscan:9000
HOLOSCAN_CONFIG_PATH=/app/config/rf_forensics.yaml
HOLOSCAN_ENABLED=true

# =============================================================================
# Frontend Configuration
# =============================================================================
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8765
VITE_HOLOSCAN_WS_URL=ws://localhost:9000

# =============================================================================
# Detection Parameters
# =============================================================================
CFAR_NUM_REFERENCE_CELLS=32
CFAR_NUM_GUARD_CELLS=4
CFAR_PFA=0.000001
CFAR_VARIANT=CA

# FFT Parameters
FFT_SIZE=1024
FFT_WINDOW=hann
FFT_OVERLAP_PERCENT=50.0
FFT_AVERAGING_COUNT=16

# =============================================================================
# WebSocket Streaming
# =============================================================================
WS_SPECTRUM_UPDATE_RATE_HZ=30.0
WS_MAX_CLIENTS=10
